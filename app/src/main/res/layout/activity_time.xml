<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TimeActivity">


    <TextClock

        android:id="@+id/cairoClock"
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:layout_marginBottom="82dp"
        android:fontFamily="@font/roboto"
        android:text="africa time"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextClock

        android:id="@+id/fiijiClock"
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="91dp"
        android:fontFamily="@font/roboto"
        android:text="fiiji time"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto"
        android:text="Cairo, Africa"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/cairoClock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="212dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/roboto"
        android:text="Fiiji, Pacific Ocean"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/fiijiClock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cairoClock" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="114dp"
        android:fontFamily="@font/roboto"
        android:padding="10dp"

        android:text="Time in Cairo and Fiiji"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>






